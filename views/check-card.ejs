<html>
    
    <%- include head %>
    
      <body>
        <div class="container">
          
          <%- include page-header %>
    
          <div class="col-lg-12" id="top-up">
    
            <%- include bc-top-up.ejs %>
    
            <h2 class="text-success">Payment Point</h2>

            <div>
                 
              <%
              let paymentTotal = 0;
              %>
              <ul class="list-group" style="margin: auto; margin-bottom: 2em; width: 60%;">
                <%
                inCart.forEach(item => {
                  paymentTotal += item.price * item.total;
                %>
                <li class="list-group-item" id="item"><span id="item-name"><%= item.name %> (<%= item.total %> x <%= item.price %>)</span><span id="item-total">Rp <%- item.price * item.total %></span></li>
                <%
                })
                %>
                <li class="list-group-item list-group-item-secondary" id="item">
                  <span id="total-label" class="text-info">Total </span>
                  <span id="total-number" class="text-info">Rp <%- paymentTotal %></span>
                </li>
              </ul>
    
            </div>
    
            <form action="/pay" method="post" id="top-up"> 
              <div class="form-group">
                <input type="text" name="number" id="top-up" class="form-control" placeholder="Input card number" required autofocus>
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-lg btn-success">Pay</button>
              </div>
            </form>
    
          </div>
    
        </div>
      </body>
    
      <%- include script %>
    
    </html>
    