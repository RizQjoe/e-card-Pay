<!DOCTYPE html>
<html>

  <%- include head %>

  <body>

    <div class="container">

      <div class="row">

        <div class="col-lg-12">

          <h1 class="text-success" style="text-align:center;">Customer Management</h1>
          
          <hr>

        </div>

      </div>

      <div class="row">
        
        <div class="col-lg-4"></div>

        <div class="col-lg-4">

          <form class="" action="/customer/add" method="POST">

            <div class="form-group">
              <label>
                Name
              </label>
              <input type="text" name="name" placeholder="Customer's Name" class="form-control" autofocus required>
            </div>
            
            <div class="form-group">
              <label>
                Email
              </label>
              <input type="text" name="email" placeholder="Customer's Email Address" class="form-control" required>
            </div>

            <div class="form-group">
              <button type="submit" class="btn btn-lg btn-success">Submit</button>
            </div>
            
          </form>

        </div>

        <div class="col-lg-4"></div>

      </div>

      <div class="row" style="margin-top:3em;">

        <div class="col-lg-2"></div>

        <div class="col-lg-8">

          <table class="table table-responsive table-hover">
    
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Card Number</th>
                <th>Credit</th>
                <th>Options</th>
              </tr>
            </thead>
            <tbody>
              <% dataCustomer.forEach( row => { %>
              <tr>
                <td><%=row.name%></td>
                <td><%=row.email%></td>
                <td><%= row.Card.number %></td>
                <td>Rp. <%= row.Card.credit %></td>
                <td>
                  <a href="/customer/edit/<%=row.id%>">Edit</a>
                  <a href="/customer/delete/<%=row.id%>"onclick="return confirm (' Delete customer <%= row.name %>?')">Delete</a>
                </td>
              </tr>
              <% })%>
            </tbody>
          </table>

        </div>

        <div class="col-lg-2"></div>

      </div>

    </div>     
        
  </body>
  <%- include script %>
</html>


