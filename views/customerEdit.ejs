<!DOCTYPE html>
<html>

  <%- include head %>

  <body>

    <div class="container">

      <div class="row">

        <div class="col-lg-12">

          <h1 class="text-success" style="text-align:center;">Customer Management</h1>
          
          <hr>

        </div>

      </div>

      <div class="row">
        
        <div class="col-lg-4"></div>

        <div class="col-lg-4">

          <form class="" action="/customer/edit/<%= data[0].id %>" method="POST">

            <div class="form-group">
              <label>
                Name
              </label>
              <input type="text" name="name" placeholder="Customer's Name" class="form-control" value="<%= data[0].name %>" autofocus required>
            </div>
            
            <div class="form-group">
              <label>
                Email
              </label>
              <input type="text" name="email" placeholder="Customer's Email Address" class="form-control" value="<%= data[0].email %>" required>
            </div>

            <div class="form-group">
              <button type="submit" class="btn btn-lg btn-success">Edit</button>
              <a href="/customer" class="btn btn-lg btn-danger">Cancel</a>
            </div>
            
          </form>

        </div>

        <div class="col-lg-4"></div>

      </div>

    </div>     
        
  </body>
  <%- include script %>
</html>