<!DOCTYPE html>
<html>

  <%- include head %>

  <body>

    <div class="container">

      <div class="row">

        <div class="col-lg-12">

          <h1 class="text-success" style="text-align:center;">Goods Management</h1>
          
          <hr>

        </div>

      </div>

      <div class="row">
        
        <div class="col-lg-4"></div>

        <div class="col-lg-4">

          <form class="" action="/goods/edit/<%= data[0].id %>" method="POST">

            <div class="form-group">
              <label>
                Name
              </label>
              <input type="text" name="name" placeholder="Good's Name" class="form-control" value="<%= data[0].name %>" required>
            </div>
            
            <div class="form-group">
              <label>
                Price
              </label>
              <input type="text" name="price" placeholder="Good's Price" class="form-control" value="<%= data[0].price %>" required>
            </div>

            <input type="hidden" name="stock" placeholder="Good's Initial Stock" class="form-control" value="100" required>

            <div class="form-group">
              <label>
                Image Link
              </label>
              <input type="text" name="img_link" placeholder="Good's Image Link" class="form-control" value="<%= data[0].img_link %>" required>
            </div>

            <div class="form-group">
              <button type="submit" class="btn btn-lg btn-success">Edit</button>
              <a href="/goods" class="btn btn-lg btn-danger">Cancel</a>
            </div>
            
          </form>

        </div>

        <div class="col-lg-4"></div>

      </div>

    </div>     
        
  </body>
  <%- include script %>
</html>